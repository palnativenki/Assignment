#  Database Schema and Query
# top 5 most recent posts along with the number of comments on each post
SELECT
    p.post_id,
    p.title,
    p.created_at,
    COUNT(c.commit_id) As commit_count
FROM
    posts p
LEFT JOIN
    Comments c ON p.post_id = c.post_id
GROUP BY
    p.post_id, p.totle, p.created_at
ORDER BY
    p.created_at DESC
LIMIT 5:

# find all users who haven;t written any post
SELECT 
     u.user_id,
     u.name,
     u.email
FROM
    users u
LEFT JOIN
    Posts p ON u.user_id = p.user_id
WHERE
    p.post_id IS NULL
